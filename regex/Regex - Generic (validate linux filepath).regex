//!/bin/bash
// ------------------------------------------------------------
//
// Regex - Valid linux filepath
//

// Find:
^((\.\./|[a-zA-Z0-9_/\-\\])*\.[a-zA-Z0-9]+)$


// ------------------------------------------------------------
//
// Example
//

echo -n '/root/tester.sh' | grep --extended-regexp '^((\.\./|[a-zA-Z0-9_/\-\\])*\.[a-zA-Z0-9]+)$';


