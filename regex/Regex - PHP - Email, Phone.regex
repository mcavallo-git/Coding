//
// Match [ an Email Address ]
//

// Find:
([\._a-zA-Z0-9-]+)(@[_a-zA-Z0-9-]+)(\.[_a-zA-Z0-9-]+\b)+

preg_match("/([\._a-zA-Z0-9-]+)(@[\.\B_a-zA-Z0-9-]+)(\.[_a-zA-Z0-9-]+\b)/i", $input_line, $output_array);


// ------------------------------------------------------------
