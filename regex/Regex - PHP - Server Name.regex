// Find:
preg_match('/\A(https?:\/\/)?((www|(m|c)?dev)\.)?(boneal)\.(me|net)(.*)/', $_SERVER['REQUEST_URI'])


// ------------------------------------------------------------
//
// SERVER_ADDR REGEX
//

// Find:
preg_match('/\A((www|(m|c)?dev)\.)?(boneal)\.(net|org|me)\Z/', $_SERVER['SERVER_ADDR'])


