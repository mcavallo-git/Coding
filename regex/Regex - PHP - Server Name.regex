// ------------------------------------------------------------
//
// ENTIRE URL REGEX
//

// Find:
preg_match('/\A(https?:\/\/)?((www|(a|b|c)?dev)\.)?(example)\.(com|net)(.*)/', $_SERVER['REQUEST_URI'])


// ------------------------------------------------------------
//
// SERVER_ADDR REGEX
//

// Find:
preg_match('/\A((www|(a|b|c)?dev)\.)?(example)\.(com|net)\Z/', $_SERVER['SERVER_ADDR'])


