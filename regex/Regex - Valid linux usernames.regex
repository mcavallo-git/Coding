#!/bin/bash

# Regex - Valid linux usernames


^[a-z_][a-z0-9_\-]{0,30}[a-z0-9_\-\$]?$


USER_NAME_TEST="xxxyyyzzz"; echo ${USER_NAME_TEST} | grep --extended-regexp '^[a-z_][a-z0-9_\-]{0,30}[a-z0-9_\-\$]?$'


